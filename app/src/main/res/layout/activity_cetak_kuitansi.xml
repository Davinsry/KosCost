<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_kuitansi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_header"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    android:background="#0D47A1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kuitansi tanda terima pembayaran dari"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1">

                        <TableRow android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama"
                                android:paddingRight="10dp"
                                android:textColor="#333333"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/tv_nama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rizki"
                                android:background="#F5F5F5"
                                android:padding="8dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                        </TableRow>

                        <TableRow android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nomor Kamar"
                                android:textColor="#333333"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/tv_no_kamar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="203"
                                android:background="#F5F5F5"
                                android:padding="8dp"
                                android:textColor="#000000"/>
                        </TableRow>

                        <TableRow android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Periode"
                                android:textColor="#333333"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/tv_periode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25-Nov-2025 s.d 24-Dec-2025"
                                android:background="#F5F5F5"
                                android:padding="8dp"
                                android:textColor="#000000"/>
                        </TableRow>

                        <TableRow android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sejumlah (Rp)"
                                android:textColor="#333333"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/tv_jumlah_uang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.300.000"
                                android:background="#F5F5F5"
                                android:padding="8dp"
                                android:textColor="#000000"
                                android:textStyle="bold"/>
                        </TableRow>

                        <TableRow android:layout_marginBottom="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Metode Bayar"
                                android:textColor="#333333"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/tv_metode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transfer"
                                android:background="#F5F5F5"
                                android:padding="8dp"
                                android:textColor="#000000"/>
                        </TableRow>

                        <TableRow android:layout_marginBottom="24dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"
                                android:textColor="#333333"
                                android:layout_gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lunas"
                                android:background="#F5F5F5"
                                android:padding="8dp"
                                android:textColor="#000000"/>
                        </TableRow>
                    </TableLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terima Kasih atas pembayaran Anda,"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/tv_tanggal_cetak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27 Nov 2025"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tv_nama_kost_ttd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#333333"
                            android:layout_marginBottom="30dp"/>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_footer_kontak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#BDBDBD"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="12sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_cetak_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan sebagai PDF"
            android:layout_marginTop="20dp"
            android:backgroundTint="#00C853"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>