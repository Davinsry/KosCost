<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Pemilik Kos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#0D47A1"
        android:layout_marginBottom="32dp"/>

    <LinearLayout
        android:id="@+id/layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan Email Terdaftar"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:hint="contoh: admin@kos.com"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/btn_request_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kirim Kode OTP"
            android:backgroundTint="#0D47A1"
            android:textColor="#FFF"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan 6 Digit Kode OTP"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:hint="XXXXXX"
            android:inputType="number"
            android:maxLength="6"
            android:textAlignment="center"
            android:letterSpacing="0.2"
            android:padding="12dp"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/btn_verify_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masuk Dashboard"
            android:backgroundTint="#00C853"
            android:textColor="#FFF"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_ulang_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganti Email / Kirim Ulang"
            android:textColor="#757575"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>